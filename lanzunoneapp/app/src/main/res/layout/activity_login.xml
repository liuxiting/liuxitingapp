<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/blaun">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@mipmap/dizailogo"
        android:layout_marginBottom="30dp"

        />
    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:hint="请输入账号"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:background="@drawable/editshape"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:hint="请输入密码"
        android:paddingLeft="10dp"
        android:gravity="center|left"
        android:password="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/editshape"
        />

    <com.dd.CircularProgressButton
        android:id="@+id/btn_login"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:textColor="#cccccc"
        android:text="登录"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/textbtn"
        app:cpb_textComplete="登录"
        app:cpb_colorIndicator="#ffffff"
        app:cpb_cornerRadius="10dp"
        app:cpb_textIdle="登录"
        app:cpb_colorProgress="#ffffff"
        app:cpb_colorIndicatorBackground="#3a75c2"
        />
</LinearLayout>
